@model DeveloperViewModel

@{
    ViewData["Title"] = "Profile";
}

    <style>
        .list {
            display: flex;
            flex-wrap: wrap;
        }
        .list-item {
            display: flex;
            flex-direction: column;
            background-color: #fff;
            padding: 1em;
            width: 100%;
        }

        .card {
            border: 1px solid gray;
            padding: 5px;
           
        }
    </style>

<div>
    <h4>Developer Profile</h4>

    <div class="row">

        <div class="col-md-12">

            <!-- Profile Image -->
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <img class="profile-user-img img-responsive img-circle" src="~/images/user.png" asp-append-version="true" alt="User profile picture">

                    <h3 class="profile-username text-center">@Html.DisplayFor(model => model.DeveloperName)</h3>

                    <p class="text-muted text-center">@Html.DisplayFor(model => model.DeveloperTypeName)</p>


                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>@Html.DisplayNameFor(model => model.DeveloperRating)</b> <a class="pull-right">@Html.DisplayFor(model => model.DeveloperRating)</a>
                        </li>

                        <li class="list-group-item">
                            <b>@Html.DisplayNameFor(model => model.PreviousWorks)</b> <a class="pull-right">@Html.DisplayFor(model => model.PreviousWorks)</a>
                        </li>
                        <li class="list-group-item">
                            <b>@Html.DisplayNameFor(model => model.SolveCount)</b> <a class="pull-right">@Html.DisplayFor(model => model.SolveCount)</a>
                        </li>
                        <li class="list-group-item">
                            <b>@Html.DisplayNameFor(model => model.current_workload)</b> <a class="pull-right">@Html.DisplayFor(model => model.current_workload)</a>
                        </li>

                    </ul>
                   


                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
      

    </div>
    <div class="row list">
        <div class="col-md-4 list-item" >
            <div class="card" >
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayNameFor(model => model.Products)</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                    <p class="card-text">
                        @foreach (var item in Model.ProductsWorked)
                        {
                            @(item.ProductName + "(" + item.count + "), ");
                        }
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 list-item">
            <div class="card" >
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayNameFor(model => model.Components)</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                    <p class="card-text">
                        @foreach (var item in Model.ComponentsWorked)
                        {
                            @(item.ComponentName + "(" + item.count + "), ");
                        }
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 list-item" >
            <div class="card" >
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayNameFor(model => model.Platforms)</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                    <p class="card-text">
                        @foreach (var item in Model.HardwaresWorked)
                        {
                            @(item.hardware_name + "(" + item.count + "), ");
                        }
                    </p>
                </div>
            </div>
        </div>
       
    </div>
    <hr />
    <div class="row list">
        <div class="col-md-4 list-item">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayNameFor(model => model.Skills)</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
                    <p class="card-text" style="word-wrap: break-word;">
                        @Html.DisplayFor(model => model.Skills)
                    </p>
                </div>
            </div>
        </div>
    </div>

</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
